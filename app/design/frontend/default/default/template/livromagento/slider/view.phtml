<?php if ($this->isEnabled()): ?>
    <div class="slider-container">
        <ul class="bxslider" id="slider_<?php echo $this->getGroup()->getSliderGroupId()?>">
            <?php foreach ($this->getImages() as $image): ?>
                <li>
                    <a href="<?php echo $image->getLink()?>" title="<?php echo $image->getTitle()?>">
                        <img src="<?php echo $this->getImageSrc($image)?>" title="<?php echo $image->getTitle()?>"  alt="<?php echo $image->getTitle()?>" />
                    </a>
                </li>
            <?php endforeach; ?>
        </ul>
    </div>
    <script type="text/javascript">
        jQuery(document).ready(function() {
            jQuery('#slider_<?php echo $this->getGroup()->getSliderGroupId()?>').bxSlider();
        });
    </script>
<?php endif; ?>